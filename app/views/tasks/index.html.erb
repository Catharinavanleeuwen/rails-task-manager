<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>
<h2>Tasks</h2>
<% @tasks.each do |task| %>
  <p>
    Name: <%= link_to task.name, task_path(task) %>

  </p>
  <p>
    completed: <%= task.completed %>
  </p>
  <%= link_to 'create task', new_task_path(task) %>
  <%= link_to 'edit', edit_task_path(task) %>
  <%= link_to 'delete', task_path(task), method: :delete, data:
  { confirm: "Are you sure boi?" } %>
  <hr>
<% end %>
